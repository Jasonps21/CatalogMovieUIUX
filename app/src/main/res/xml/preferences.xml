<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/notification">

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_reminder_daily"
            android:summary="@string/daily_reminder_summary"
            android:title="@string/daily_reminder_title" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_reminder_upcoming"
            android:summary="@string/upcoming_reminder_summary"
            android:title="@string/upcoming_reminder_title" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings">

        <Preference
            android:key="@string/key_setting_locale"
            android:summary="@string/setting_locale_summary"
            android:title="@string/setting_locale_title" />

    </PreferenceCategory>

</PreferenceScreen>